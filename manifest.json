{
  "manifest_version": 3,
  "name": "performeter67",
  "version": "1.0.0",
  "description": "tinder extension to find how performative your matches are",
  
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  
  "host_permissions": [
    "*://*.tinder.com/*",
    "*://images-ssl.gotinder.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["*://*.tinder.com/*"],
      "js": ["contentScript.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_title": "Performative Meter"
  },
  
  "options_page": "settings.html",
  
  "web_accessible_resources": [
    {
      "resources": ["sidebar/dist/*", "gemini-prompt.txt", "images/labubu.png", "images/performeter.png", "settings.html", "settings.js"],
      "matches": ["*://*.tinder.com/*"]
    }
  ]
}
